<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../../partials/header'); %></header>

    <main>
      <div class="jumbotron">
        <h1>Inventory</h1>
        <p>Welcome <%= username%></p>
        <form>
          <button
            type="submit"
            class="btn btn-primary"
            id="edit-btn"
            formaction="http://localhost:4000/inventory/edit"
            formmethod="get"
            value="<%= id %>"
            name="id"
          >
            Edit Inventory
          </button>
          <button
            type="submit"
            class="btn btn-warning <%= isInValid? 'is-invalid':'' %>"
            id="delete-btn"
            formaction="http://localhost:4000/inventory/delete"
            formmethod="post"
            value="<%= id %>"
            name="id"
          >
            Delete Inventory
          </button>
          <button
            type="submit"
            class="btn btn-danger"
            id="logout-btn"
            formaction="http://localhost:4000/logout"
            formmethod="get"
          >
            Logout
          </button>
          <script>
            if ("<%= username%>" != "<%= data.manager%>") {
              document.getElementById("edit-btn").disabled = true;
              document.getElementById("delete-btn").disabled = true;
            }
          </script>
          <label class="invalid-feedback" for="delete-btn">
            Inventory delete failed! Please retry later ...
          </label>
        </form>
        <div class="d-flex flex-wrap justify-content-evenly mt-3">
          <% Object.entries(data).forEach(([key,value],idx) => { %>
          <div class="col-sm-6 margin-top-xs mt-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= capitalizeFirstLetter(key) %></h5>
                <p class="card-text"><%= value?value:'N/A' %></p>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>

    <footer><%- include('../../partials/footer'); %></footer>
  </body>
</html>
